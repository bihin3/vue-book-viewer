{
  "name": "vue-book-viewer",
  "version": "1.0.0",
  "description": "A customizable book page flip component for Vue 3",
  "main": "./dist/vue-book-viewer.umd.js",
  "module": "./dist/vue-book-viewer.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-book-viewer.es.js",
      "require": "./dist/vue-book-viewer.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --config demo/vite.config.ts",
    "build": "vite build && vue-tsc --emitDeclarationOnly",
    "build:demo": "NODE_ENV=production vite build --config demo/vite.config.ts",
    "preview": "vite preview",
    "preview:demo": "vite preview --outDir dist-demo"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vue": "^3.4.0",
    "vue-tsc": "^1.8.0"
  },
  "keywords": [
    "vue",
    "vue3",
    "book",
    "flip",
    "page",
    "animation",
    "component",
    "viewer"
  ],
  "license": "MIT"
}
